{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "declaration": false,
        "strict": true,
        "noImplicitAny": true,
        "noLib": false,
        "outDir": "production",
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule" : true,
        "strictNullChecks": true,
        "esModuleInterop": true,
         "moduleResolution": "node",
         "sourceMap": true,
      },
    "include": [
        "**/*",
        ".eslintrc.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "temp.*",
        "production/*"
    ]
}