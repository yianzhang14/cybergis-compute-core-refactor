{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "declaration": false,
        "strict": true,
        "noImplicitAny": true,
        "noLib": false,
        "outDir": "./production",
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule" : true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": ".",
      },
    "include": [
        "src/**/*",
        "tools/**/*",
        "configs/**/*",
        "test/**/*",
        "eslint.config.js",
        "cli.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "temp.*",
        "production/*"
    ]
}